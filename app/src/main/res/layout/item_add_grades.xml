<!-- item_add_grades.xml -->

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Student Information -->
    <TextView
        android:id="@+id/studentInfoTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Student Name: John Doe\nStudent ID: 12345"
        android:textSize="16sp"
        android:textStyle="bold"
        android:gravity="center"/>

    <!-- Assignment Scores -->
    <EditText
        android:id="@+id/assignment1EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Assignment 1 Score"
        android:inputType="numberDecimal"/>

    <EditText
        android:id="@+id/assignment2EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Assignment 2 Score"
        android:inputType="numberDecimal"/>

    <!-- CAT Scores -->
    <EditText
        android:id="@+id/cat1EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="CAT 1 Score"
        android:inputType="numberDecimal"/>

    <EditText
        android:id="@+id/cat2EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="CAT 2 Score"
        android:inputType="numberDecimal"/>

    <!-- Exam Score -->
    <EditText
        android:id="@+id/examEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Exam Score"
        android:inputType="numberDecimal"/>

    <!-- Save Button -->
    <Button
        android:id="@+id/saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Grades"/>

    <Button
        android:id="@+id/homelec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Home" />
</LinearLayout>
